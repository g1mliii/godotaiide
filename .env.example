# ==================================
# Godot-Minds Environment Variables
# ==================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==================================
# AI Provider API Keys (Direct Mode)
# ==================================
# Only needed if using Direct API mode
# Leave blank if using OpenCode or Ollama modes

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI GPT
OPENAI_API_KEY=

# Google Gemini
GOOGLE_API_KEY=

# ==================================
# Server Configuration
# ==================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# ==================================
# AI Settings
# ==================================
# Options: direct | opencode | ollama
DEFAULT_AI_MODE=direct

# Model names (adjust based on provider)
ANTHROPIC_MODEL=claude-sonnet-4-5
OPENAI_MODEL=gpt-4-turbo
GOOGLE_MODEL=gemini-pro

# ==================================
# Ollama Settings (Local Mode)
# ==================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ==================================
# Database & Storage
# ==================================
CHROMA_PERSIST_DIR=.godot_minds/index
CACHE_DIR=.godot_minds/cache

# ==================================
# Logging
# ==================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=.godot_minds/logs/server.log

# ==================================
# Git Configuration
# ==================================
GIT_MAX_DIFF_SIZE=100000  # Max characters in diff
GIT_TIMEOUT=30            # Git command timeout in seconds

# ==================================
# Performance
# ==================================
MAX_WORKERS=4              # Thread pool size
REQUEST_TIMEOUT=60         # HTTP request timeout
WEBSOCKET_PING_INTERVAL=30

# ==================================
# Security (Production)
# ==================================
CORS_ORIGINS=http://localhost:*,http://127.0.0.1:*
RATE_LIMIT_PER_MINUTE=60
