# Godot-Minds Backend Configuration
# Copy this file to .env and fill in your values

# Server Configuration
HOST=127.0.0.1
PORT=8004
DEBUG=true

# AI Provider Mode: "direct" | "opencode" | "ollama"
AI_MODE=direct

# Direct API Keys (for AI_MODE=direct)
# Provide at least one of these:
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# OpenCode Configuration (for AI_MODE=opencode)
# Path to OpenCode CLI
OPENCODE_PATH=opencode

# Ollama Configuration (for AI_MODE=ollama)
OLLAMA_URL=http://localhost:11434

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=.godot_minds/index

# File Watching
# Comma-separated list of extensions to watch
# WATCH_EXTENSIONS=.gd,.cs,.cpp,.h,.hpp

# Comma-separated list of directories to ignore
# IGNORE_DIRECTORIES=.git,addons,.godot_minds,.godot

# Git Configuration
DEFAULT_BRANCH=main

# WebSocket
WS_HEARTBEAT_INTERVAL=30
